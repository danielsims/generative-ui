{
  "extends": "@generative-ui/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "esnext"
  },
  "include": [
    ".",
    ".next/types/**/*.ts",
    "../../packages/generative-components/src/**/*.ts",
    "../../packages/generative-components/src/generative-image/config/mocks.tsx",
    "../../packages/generative-components/src/config.ts"
  ],
  "exclude": ["node_modules"]
}
